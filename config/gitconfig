# Set your name and email with the following:
#   git config -f ~/.gitconfig.local user.name John Appleseed
#   git config -f ~/.gitconfig.local user.email me@example.com

[include]
  path = .gitconfig.local
[color]
  ui = auto
[core]
  excludesfile = ~/.gitignore
[git-up "bundler"]
  check = true
[rebase]
  autosquash = true
[color "diff"]
  commit = yellow reverse
[push]
  default = tracking
[init]
  templatedir = ~/.git_template
[merge]
  log = true
  conflictstyle = diff3
  tool = vimdiff
[mergetool]
  prompt = false
[pager]
  log = diff-highlight | $PAGER
  show = diff-highlight | $PAGER
  diff = diff-highlight | $PAGER
